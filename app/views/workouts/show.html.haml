.col-md-6.col-md-offset-3
  .row
    .panel.panel-default
      .panel-heading

        #workout
          %p= @workout.date.strftime("%A, %B %d")
          %p= @workout.workout
          %p= @workout.mood
          %p= @workout.length

        #exercises
          %h2 Exercises
          = render @workout.exercises

          %h3 Add an exercise
          = render "exercises/form"


        = link_to "Back", workouts_path
        |
        = link_to "Edit", edit_workout_path(@workout)
        |
        = link_to "Delete", workout_path(@workout), method: :delete, data: { confirm: "Are you sure?"}


